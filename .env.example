# AI Call Debit Spread Trader - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# OpenAI API Key (for LLM analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alpaca Trading API (for trade execution)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Polygon.io API Key (optional, for enhanced market data)
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment mode: development, staging, production
ENVIRONMENT=development

# Debug mode (true for development)
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (for local development)
DATABASE_URL=sqlite:///./ai_trader.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_trader
POSTGRES_PASSWORD=your_postgres_password_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Risk management
MAX_RISK_PER_TRADE=0.02        # 2% of portfolio per trade
MAX_POSITIONS=5                # Maximum number of open positions

# Trading mode
PAPER_TRADING=true             # Set to false for live trading (be careful!)

# Strategy parameters
PROFIT_TARGET_PCT=0.8          # Take profit at 80% of max profit
STOP_LOSS_PCT=0.5             # Stop loss at 50% of max loss

# AI thresholds
LLM_CONFIDENCE_THRESHOLD=70    # Minimum LLM confidence score
ML_WIN_PROBABILITY_THRESHOLD=0.6  # Minimum ML win probability

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_PORT=8000

# =============================================================================
# NOTIFICATION SETTINGS (Optional)
# =============================================================================

# Slack webhook for trade notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email settings for alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# =============================================================================
# AWS CONFIGURATION (For production deployment)
# =============================================================================

# AWS credentials (if deploying to AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# S3 bucket for data storage
S3_BUCKET_NAME=ai-trader-data

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_REAL_TIME_SCORING=true
ENABLE_AUTO_EXECUTION=false
ENABLE_PAPER_TRADING_ALERTS=true
ENABLE_PERFORMANCE_TRACKING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Number of worker processes for API
WORKERS=4

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Cache TTL settings (in seconds)
MARKET_DATA_CACHE_TTL=60
AI_SCORES_CACHE_TTL=300

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file rotation
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5